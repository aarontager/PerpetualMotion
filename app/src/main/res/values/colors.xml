<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="primaryColor">#9c27b0</color>
    <color name="primaryLightColor">#d05ce3</color>
    <color name="primaryDarkColor">#6a0080</color>
    <color name="secondaryColor">#673ab7</color>
    <color name="secondaryLightColor">#9a67ea</color>
    <color name="secondaryDarkColor">#320b86</color>
    <color name="primaryTextColor">#ffffff</color>
    <color name="secondaryTextColor">#ffffff</color>

    <!-- For colored text; default is black/dark-gray (Day) or white/light-gray (Night) -->
    <color name="colorPrimaryTextColored">@color/primaryDarkColor</color>
    <color name="colorSecondaryTextColored">@color/primaryColor</color>

    <!-- Matching colored background -->
    <color name="colorBackgroundColored">@color/primaryLightColor</color>

    <color name="colorDefaultBackground">@android:color/background_light</color>
</resources>